#include <WiFi.h>
#include <HTTPClient.h>
#include <HTTPUpdate.h>

const char* ssid     = "zeekers1";
const char* password = "9629293943";

// ✔ CORRECT RAW URL
String firmwareURL = "https://raw.githubusercontent.com/GB20002000/Online_OTA/main/Frimware.bin";

const int ledPin = 2;
unsigned long lastMillis = 0;

void setup() {
  Serial.begin(115200);
  pinMode(ledPin, OUTPUT);

  WiFi.begin(ssid, password);
  Serial.print("Connecting WiFi");

  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");
    delay(500);
  }

  Serial.println("\nWiFi Connected!");
}

void checkForUpdates() {
  Serial.println("[OTA] Checking for updates...");

  HTTPClient http;

  http.setFollowRedirects(HTTPC_FORCE_FOLLOW_REDIRECTS);  
  http.setUserAgent("ESP32-OTA-Updater");

  // ✔ FIX: MUST use .c_str()
  http.begin(firmwareURL.c_str());

  httpUpdate.setFollowRedirects(HTTPC_FORCE_FOLLOW_REDIRECTS);

  t_httpUpdate_return ret = httpUpdate.update(http);

  switch (ret) {
    case HTTP_UPDATE_FAILED:
      Serial.printf("[OTA] Update Failed: %s\n", httpUpdate.getLastErrorString().c_str());
      break;

    case HTTP_UPDATE_NO_UPDATES:
      Serial.println("[OTA] No Update Available");
      break;

    case HTTP_UPDATE_OK:
      Serial.println("[OTA] Update Successful! Rebooting...");
      break;
  }
}

void loop() {
  Serial.println("hello Running...");

  if (millis() - lastMillis > 10000) {
    lastMillis = millis();
    checkForUpdates();
  }
}
