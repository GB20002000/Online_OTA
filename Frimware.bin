#include <WiFi.h>
#include <HTTPClient.h>
#include <HTTPUpdate.h>

const char* ssid     = "zeekers1";
const char* password = "9629293943";

// GitHub RAW .bin link
String firmwareURL = "https://github.com/GB20002000/Online_OTA/blob/main/Frimware.bin";

const int ledPin = 2;
unsigned long lastMillis = 0;

void setup() {
  Serial.begin(115200);
  pinMode(ledPin, OUTPUT);

  WiFi.begin(ssid, password);
  Serial.print("Connecting WiFi");

  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");
    delay(500);
  }

  Serial.println("\nWiFi Connected!");
}


void checkForUpdates() {
  Serial.println("[OTA] Checking for updates...");

  HTTPClient http;

  http.setFollowRedirects(HTTPC_FORCE_FOLLOW_REDIRECTS);  // FIX #1
  http.setUserAgent("ESP32-OTA-Updater");                 // FIX #2

  http.begin(firmwareURL);  // Your GitHub RAW URL

  t_httpUpdate_return ret = httpUpdate.update(http);

  switch (ret) {
    case HTTP_UPDATE_FAILED:
      Serial.printf("[OTA] Update Failed: %s\n",
      httpUpdate.getLastErrorString().c_str());
      break;

    case HTTP_UPDATE_NO_UPDATES:
      Serial.println("[OTA] No Update Available");
      break;

    case HTTP_UPDATE_OK:
      Serial.println("[OTA] Update Successful! Rebooting...");
      break;
  }
}


void loop() {
  // LED Blink
 Serial.println("HELLO");

  // Check OTA every 60 sec
  if (millis() - lastMillis > 10000) {
    lastMillis = millis();
    checkForUpdates();
  }
}
